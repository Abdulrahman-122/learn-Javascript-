--
we can change(mutate) value of an array inside a function usign built in function
const concept = ['arrays', 'can', 'be', 'mutated'];

function changeArr(arr){
  arr[3] = 'MUTATED';
}

changeArr(concept);

console.log(concept) 

function removeElement(newArr){
  newArr.pop();
}
removeElement(concept);
console.log(concept)

output;
[ 'arrays', 'can', 'be', 'MUTATED' ]
[ 'arrays', 'can', 'be' ]

